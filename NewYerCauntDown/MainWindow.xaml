<Window x:Class="NewYerCauntDown.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewYerCauntDown"
        mc:Ignorable="d"
        Title="New Yer Cauntdown" Height="450" Width="800"
        Icon="/chillin.ico">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Menu -->
            <RowDefinition Height="*"/>
            <!-- Countdown -->
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="_Customize">
                <MenuItem Header="_Themes..." Click="Themes_Click" />
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1" x:Name="CountdownGrid">
            <Viewbox>
                <TextBlock Name="CountdownText" Text="365d 00:00:00"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontFamily="Arial" />
            </Viewbox>
        </Grid>
    </Grid>
</Window>
